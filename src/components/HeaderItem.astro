---
import Link from "./Link.astro";
type Props = {
  href: string;
  active?: boolean;
  gradient?: boolean;
  class?: string;
  newTab?: boolean;
};

const { href, newTab, active, gradient, class: className } = Astro.props;
---

<li class:list={[className, "item"]}>
  <Link
    href={href}
    active={active}
    animateFontColor={gradient}
    target={newTab ? "_blank" : ""}
  >
    <slot />
  </Link>
</li>

<style>
  .item {
    margin-right: 0.5rem;
    display: flex;
    transform: translateY(0);
  }

  .item:last-of-type {
    margin-right: 0;
  }
</style>
